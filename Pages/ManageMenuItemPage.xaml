<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FMMSRestaurant.Pages.ManageMenuItemPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FMMSRestaurant.ViewModels"
    xmlns:models="clr-namespace:FMMSRestaurant.Models"
    Title="Manage Menu Items"
    x:DataType="viewmodels:ManageMenuItemsViewModel">

    <VerticalStackLayout Padding="20">
        <!-- Category Picker -->
        <Picker
            x:Name="CategoryPicker"
            ItemsSource="{Binding Categories}"
            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
            Title="Select Category" />

        <!-- Menu Items List -->
        <CollectionView
            ItemsSource="{Binding MenuItems}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MenuItemModel">
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" />
                        <Label Text="{Binding Price, StringFormat='{0:C}'}" FontSize="14" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Action Buttons -->
        <Button
            x:Name="EditButton"
            Command="{Binding EditMenuItemCommand}"
            Text="Edit" />
        <Button
            x:Name="SaveButton"
            Command="{Binding SaveMenuItemCommand}"
            Text="Save" />
        <Button
            x:Name="CancelButton"
            Command="{Binding CancelCommand}"
            Text="Cancel" />
    </VerticalStackLayout>
</ContentPage>