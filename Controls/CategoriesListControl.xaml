<?xml version="1.0" encoding="utf-8" ?>
<HorizontalStackLayout
    x:Class="FMMSRestaurant.Controls.CategoriesListControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:FMMSRestaurant.Models">

    <HorizontalStackLayout.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="Padding" Value="10,5" />
        </Style>
    </HorizontalStackLayout.Resources>

    <!-- Bind ItemsSource to Categories -->
<CollectionView ItemsSource="{Binding Categories}">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:MenuCategoryModel">
                <Border BackgroundColor="LightGray" StrokeShape="RoundRectangle 5">
                    <Label Text="{Binding Name}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCategoryTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</HorizontalStackLayout>
